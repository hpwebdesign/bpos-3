          <!-- Items -->
      <div class="mt-4 table-responsive">
  <table class="table table-invoice">
    <thead>
      <tr>
        <th class="min-w-300px">Description</th>
        <th>Qty</th>
        <th>Price</th>
        <th class="text-end">Amount</th>
      </tr>
    </thead>
    <tbody>
      {% for product in products  %}
      <tr>
        <td>
          <span class="tiny-dot dot-red"></span>
          {{ product.name }}
        </td>
        <td>{{ product.quantity }}</td>
        <td class="money">{{ product.price }}</td>
        <td class="amount money">{{ product.total }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>


          <!-- Totals -->
          {% if totals %}
          <div class="row justify-content-end order-total">
            <div class="col-md-6 col-lg-5">
            {% for total in totals %}
              <dl class="row mb-2">
                <dt class="col-6">{{ total.tile }}:</dt>
                <dd class="col-6 text-end fw-bold money">{{ total.text }}</dd>
              </dl>
            {% endfor %}
            </div>
          </div>
        {% endif %}
        </div>

        <!-- RIGHT: Payment details -->
        <div class="col-lg-4">
          <div class="card side p-4">
            <div class="d-flex d-lg-none gap-2 mb-3">
              <!--              <span class="badge badge-soft-pill badge-approved">Approved</span>-->
              <span class="badge badge-soft-pill badge-pending">{{ order.status }}</span>
            </div>

            <h6 class="mb-3">ORDER DETAILS</h6>
            <dl class="kv mb-4">
              <dt>Customer:</dt>
              <dd class="text-break">{{ order.customer }}</dd>
            </dl>

            <dl class="kv mb-4">
              <dt>Shipping:</dt>
              <dd class="text-break">InStore Purchase</dd>
            </dl>
            <dl class="kv mb-4">
              <dt>Payment Method:</dt>
              <dd class="text-break">{{ order.payment_method }}</dd>
            </dl>
          </div>
        </div>
      </div>

      <div class="row g-4 col-lg-5 align-items-center justify-content-center d-flex" style="margin: 0 auto;">
        <a onclick="home();" class="btn btn-primary btn-sm pay-now">Back to Cart</a>
      </div>

    </main>

    <script>
      function home() {
        link_url('bpos/home');
      }
      function link_url(route) {
        $.ajax({
            url: 'index.php?route=' + route + '&format=json',
            type: 'get',
            dataType: 'json',
            success: function(json) {
                if (json['output']) $('#main-content').html(json['output']);
                else $('#main-content').html('<p>No content</p>');
                
            },
            error: function() {
                $('#main-content').html('<p>Error loading content</p>');
            }
        });
    }
    </script>