{% if stores|length > 1 %}
<div class="dropdown">
  <button class="icon-btn dropdown-toggle" type="button" id="storeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
     <i class="bi bi-shop"></i>&nbsp;<span class="d-xs-none">{{ store_name }}</span>
  </button>
  <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="storeDropdown">
            {% for store in stores %}
            <li>
                <a class="dropdown-item d-flex align-items-center" href="{{ store.url }}">
                    {{ store.name }}
                </a>
            </li>
            {% endfor %}
        </ul>
</div>

{% endif %}