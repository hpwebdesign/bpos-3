    <script>
        function downloadPDF() {
          const root = document.getElementById('invoice-page');

          // Tambah class untuk tweak CSS saat render PDF
          root.classList.add('pdf-mode');

          // Opsional: kurangi padding-bottom dinamis 2mm
          const prevPadding = root.style.paddingBottom;
          root.style.paddingBottom = 'calc(var(--pad-bottom, 15mm) - 2mm)';

          const opt = {
//            margin: [10, 15, 10, 15],
            filename: 'Invoice_INV-2025-0055.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2, useCORS: true },
            jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
            pagebreak: { mode: ['css', 'legacy'], avoid: ['.no-split'] }
          };

          html2pdf().set(opt).from(root).save().then(()=>{
            // kembalikan state
            root.style.paddingBottom = prevPadding;
            root.classList.remove('pdf-mode');
          });
        }


      (function(){
        const elRef = document.querySelector('[data-ref]');
